<div class="container">
  <div class="row">
    <div class="col-sm-8 offset-sm-2">
      <h2>新規登録</h2>
      <%= form_tag("/users/create") do %>
      <form>
        <div class="form-group">
          <label for="InputName">お名前</label>
          <input type="text" class="form-control" id="InputName" aria-describedby="nameHelp" placeholder="名前を入れてください" name="name">
        </div>
        <div class="form-group">
          <label for="InputEmail1">Email</label>
          <input type="email" class="form-control" id="InputEmail1" aria-describedby="emailHelp" placeholder="sample@gmail.com" name="email">
          <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        <div class="form-group">
          <label for="InputPassword1">パスワード</label>
          <input type="password" class="form-control" id="InputPassword1" placeholder="パスワード" name="password">
        </div>
        <div class="form-group">
          <label for="exampleFormControlTextarea1">プロフィール</label>
          <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="profile" value="" placeholder="プロフィールを入力してください。"></textarea>
        </div>
        <div class="btn-container">
          <button type="submit" class="btn btn-primary btn-lg">新規登録</button>
        </div>
      </form>
      <%end%>
    </div>
  </div>
</div>
