
<div class="container">
  <div class="row">
    <div class="col-sm-10 offset-sm-1">
      <h2>
        <strong>Title:</strong>
        <%= @post.title %>
      </h2>
      <div class="user_icon">
        <img src="<%=" /user_images/#{@post.user.image_name}"%>" alt=""><%= link_to(@post.user.name,"/users/#{@post.user_id}") %>
      </div>
      <hr>
      <p>
        <%= @post.content %>
      </p>
      <hr>
      <%= form_tag("/comments/create") do %>
        <div class="form-group">
          <input type="hidden" name="post_id" value="<%=@post.id%>">
          <input type="hidden" name="user_id" value="<%=@current_user.id%>">
          <textarea class="form-control" id="" rows="1" placeholder="コメントを入力してください" name="content"></textarea>
        </div>
        <button type="submit" name="button" class="btn btn-primary">コメント</button>
        <hr>
      <% end %>
      <% @comments.each do |comment| %>
      <div class="comment">
        <div class="comment-image">
          <img src="<%=" /user_images/#{comment.user.image_name}"%>" alt="">
        </div>
        <div class="comment-content">
          <div class="comment-header">
            <%=link_to(comment.user.name,"/users/#{comment.user.id}") %>
          </div>
          <div class="comment-body">
            <p><%= comment.content %></p>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
